<h1>Friends</h1>
<div class="search-area">
  <p>Search Friend </p>
  <%= form_tag search_friend_path, remote: true, method: :get  do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :friend, params[:friend], placeholder: "Email or name friend", autofocus: true, class: "form-control lg"%>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 1,5x'%>
        <%end%>
      </div>
    </div>
  <% end %>
</div>
<div id="friend-results">

</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>
